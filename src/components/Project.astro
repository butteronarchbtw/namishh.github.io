---
const { tech, desc, name } = Astro.props;
---
<div class="card w-full md:w-1/2 lg:w-1/3">
    <a class="cursor-pointer flex flex-col gap-3 md:p-4 p-2 " href={`https://github.com/chadcat7/${name}`}>
      <div class=" lg:px-16 lg:py-8 md:px-12 px-4 py-4 flex flex-col gap-2 bg-mbg rounded-lg" >
        <p class="font-bold text-2xl text-primary font-serif">{name}</p>
        <p class="font-light leading-6 text-fg">{desc}</p>
        <div class="buttons flex gap-4 mt-2 flex-wrap">
          {tech.map(i => <span class='bg-bg3 text-fg px-4 font-mono rounded-md'>{i.name}</span>)}
        </div>
        </div>
    </a>
</div>
